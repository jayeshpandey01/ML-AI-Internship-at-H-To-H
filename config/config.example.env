# Algo Trading System Configuration
# Copy this file to config.env and update with your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Alpha Vantage API Configuration
# Get your free API key from: https://www.alphavantage.co/support/#api-key
ALPHAVANTAGE_API_KEY=your_alphavantage_api_key_here

# =============================================================================
# GOOGLE SHEETS CONFIGURATION
# =============================================================================

# Google Sheets Integration
# Path to your Google service account credentials JSON file
GOOGLE_SHEETS_CREDENTIALS_PATH=config/google_credentials.json

# Your Google Sheet ID (found in the sheet URL)
# Example: https://docs.google.com/spreadsheets/d/1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms/edit
# The ID is: 1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms
GOOGLE_SHEET_ID=your_google_sheet_id_here

# =============================================================================
# TELEGRAM CONFIGURATION (OPTIONAL)
# =============================================================================

# Telegram Bot Configuration
# Create a bot with @BotFather on Telegram to get these values
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Telegram Alert Settings (true/false)
TELEGRAM_ENABLE_TRADE_ALERTS=true
TELEGRAM_ENABLE_ERROR_ALERTS=true
TELEGRAM_ENABLE_STATUS_ALERTS=true
TELEGRAM_ENABLE_ML_ALERTS=true

# =============================================================================
# TRADING STRATEGY CONFIGURATION
# =============================================================================

# Stock Selection
# Comma-separated list of stock symbols to analyze
NIFTY_STOCKS=RELIANCE.NS,HDFCBANK.NS,INFY.NS,TCS.NS,ICICIBANK.NS

# RSI (Relative Strength Index) Settings
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# Moving Average Settings
MA_SHORT_PERIOD=10
MA_LONG_PERIOD=20

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Data Cache Settings
ENABLE_DATA_CACHE=true
CACHE_EXPIRY_MINUTES=60

# Performance Settings
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT_SECONDS=30

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Machine Learning Model Settings
ML_MODEL_TYPE=RandomForest
ML_FEATURE_WINDOW=30
ML_TRAIN_TEST_SPLIT=0.8

# Backtesting Settings
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-01-01
INITIAL_CAPITAL=100000

# Risk Management
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENTAGE=0.05
TAKE_PROFIT_PERCENTAGE=0.15